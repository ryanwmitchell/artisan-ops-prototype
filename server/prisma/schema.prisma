generator client { provider = "prisma-client-js" }
datasource db { provider = "postgresql"; url = env("DATABASE_URL") }

model Product { id String @id @default(cuid()); name String; sku String; price Float; stock Int }
model Order { id String @id @default(cuid()); orderNumber String; channel String; status String; total Float; items Json }
model PurchaseOrder { id String @id @default(cuid()); supplier String; status String; items Json; costTotal Float }
model Invoice { id String @id @default(cuid()); customer String; orderId String; total Float; status String }
model Contact { id String @id @default(cuid()); name String; type String; email String; phone String }
